<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ding.god.tingbei.view.fragment.ProgramListFragment">
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_program_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="9dp"
            />
        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="13sp"
            android:text="@string/order"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:drawableEnd="@drawable/selector_rank_order"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"/>
        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="17dp"
            android:background="@color/bg_more_gray"
            android:layout_toStartOf="@id/tv_order"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
        <TextView
            android:id="@+id/tv_albumset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="@string/select"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:layout_toStartOf="@id/line"
            android:layout_centerVertical="true"
            android:drawableStart="@mipmap/albumset"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_divider"/>
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fragment_program_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
