<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ding.god.tingbei">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".view.activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.SearchActivity" />
        <activity android:name=".base.PlayBarBaseActivity" />
        <activity android:name=".view.activity.CategoryActivity" />
        <activity android:name=".view.activity.AlbumActivity" />
        <activity android:name=".view.activity.RadioListActivity" />
        <activity android:name=".view.activity.RadioPlayActivity" />

        <service
            android:name=".service.PlayService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".view.activity.TestActivity"></activity>
    </application>

</manifest>